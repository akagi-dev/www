---
import Layout from '@layouts/Layout.astro';
import { useTranslations } from '@i18n/ui';

const t = useTranslations('en');
---

<Layout>
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-akagi-navy to-akagi-teal text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-akagi-orange">
          {t('about.title')}
        </h1>
        <p class="text-xl text-akagi-light-blue max-w-3xl">
          {t('about.description')}
        </p>
      </div>
    </section>

    <!-- Content Sections -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- JDM Specialists -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-red">
            <div class="text-akagi-red text-4xl mb-4">üèéÔ∏è</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('about.jdm.title')}</h2>
            <p class="text-gray-600">
              {t('about.jdm.description')}
            </p>
          </div>

          <!-- Motorsport Excellence -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-teal">
            <div class="text-akagi-teal text-4xl mb-4">üèÅ</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('about.motorsport.title')}</h2>
            <p class="text-gray-600">
              {t('about.motorsport.description')}
            </p>
          </div>

          <!-- Passion -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-orange">
            <div class="text-akagi-orange text-4xl mb-4">‚ù§Ô∏è</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('about.passion.title')}</h2>
            <p class="text-gray-600">
              {t('about.passion.description')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Image Placeholder -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-r from-akagi-teal to-akagi-navy rounded-lg h-96 flex items-center justify-center">
          <div class="text-center text-white">
            <p class="text-2xl font-bold mb-2">üì∏ Image Placeholder</p>
            <p class="text-akagi-light-blue">JDM Drift Car / Workshop / Motorsport Action</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
