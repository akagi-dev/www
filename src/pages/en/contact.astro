---
import Layout from '@layouts/Layout.astro';
import { useTranslations } from '@i18n/ui';

const t = useTranslations('en');
---

<Layout>
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-akagi-navy to-akagi-teal text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-akagi-orange">
          {t('contact.title')}
        </h1>
        <p class="text-xl text-akagi-light-blue max-w-3xl">
          {t('contact.description')}
        </p>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Location -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-teal">
            <div class="text-akagi-teal text-4xl mb-4">üìç</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('contact.location.title')}</h2>
            <p class="text-gray-600">
              {t('contact.location.description')}
            </p>
          </div>

          <!-- Contact Info -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-red">
            <div class="text-akagi-red text-4xl mb-4">üìß</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('contact.info.title')}</h2>
            <p class="text-gray-600 mb-2">
              {t('contact.info.email')}
            </p>
            <p class="text-gray-600">
              {t('contact.info.phone')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3207.7885461699283!2d139.0227!3d36.5158!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzbCsDMwJzU2LjkiTiAxMznCsDAxJzIxLjciRQ!5e0!3m2!1sen!2sjp!4v1234567890123"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Akagi Engineering Location"
          ></iframe>
        </div>
      </div>
    </section>
  </div>
</Layout>
