---
import Layout from '@layouts/Layout.astro';
import { useTranslations } from '@i18n/ui';

const t = useTranslations('ru');
---

<Layout>
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-akagi-navy to-akagi-teal text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-akagi-orange">
          {t('contact.title')}
        </h1>
        <p class="text-xl text-akagi-light-blue max-w-3xl">
          {t('contact.description')}
        </p>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Location -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-teal">
            <div class="text-akagi-teal text-4xl mb-4">üìç</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('contact.location.title')}</h2>
            <p class="text-gray-600">
              {t('contact.location.description')}
            </p>
          </div>

          <!-- Business Hours -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-orange">
            <div class="text-akagi-orange text-4xl mb-4">‚è∞</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('contact.hours.title')}</h2>
            <p class="text-gray-600 whitespace-pre-line">
              {t('contact.hours.description')}
            </p>
          </div>

          <!-- Contact Info -->
          <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition border-t-4 border-akagi-red">
            <div class="text-akagi-red text-4xl mb-4">üìß</div>
            <h2 class="text-2xl font-bold mb-4 text-akagi-charcoal">{t('contact.info.title')}</h2>
            <p class="text-gray-600 mb-2">
              {t('contact.info.email')}
            </p>
            <p class="text-gray-600">
              {t('contact.info.phone')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Placeholder -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-r from-akagi-teal to-akagi-navy rounded-lg h-96 flex items-center justify-center">
          <div class="text-center text-white">
            <p class="text-2xl font-bold mb-2">üó∫Ô∏è –ó–∞–ø–æ–ª–Ω–∏—Ç–µ–ª—å –∫–∞—Ä—Ç—ã</p>
            <p class="text-akagi-light-blue">–ö–∞—Ä—Ç–∞ –º–µ—Å—Ç–æ–ø–æ–ª–æ–∂–µ–Ω–∏—è / –ú–∞—Ä—à—Ä—É—Ç—ã</p>
          </div>
