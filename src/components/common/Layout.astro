---
import { getLangFromUrl, useTranslations, languages, getPortalFromUrl } from '@i18n/ui';

const lang = getLangFromUrl(Astro.url);
const portal = getPortalFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
// Helper to build paths correctly with base
const buildPath = (path: string) => `${base}/${path}`.replace(/\/+/g, '/');

// Portal-specific paths
const portalPrefix = portal === 'drift' ? 'drift/' : '';
const otherPortalPrefix = portal === 'drift' ? '' : 'drift/';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={buildPath('favicon.svg')} />
    <title>Akagi Engineering - {portal === 'drift' ? 'JDM Drift Car Rental' : 'JDM Motorsport Specialists'}</title>
    <meta name="description" content={portal === 'drift' ? 'Rent authentic JDM drift cars at Japan\'s premier tracks - Chiba, Gunma, and Fuji Speedway' : 'Akagi Engineering - Japanese car service specializing in JDM drift cars and D1GP motorsport'} />
  </head>
  <body class="bg-gray-50 text-akagi-charcoal">
    <header class="bg-akagi-navy text-white sticky top-0 z-50 shadow-md">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <div class="flex-shrink-0">
            <a href={buildPath(`${portalPrefix}${lang}/`)} class="text-xl font-bold text-akagi-red hover:text-akagi-orange transition">
              AKAGI {portal === 'drift' ? 'DRIFT' : 'ENGINEERING'}
            </a>
          </div>

          <!-- Portal Switcher (Desktop) -->
          <div class="hidden md:flex md:items-center md:space-x-4 md:mr-8">
            <a 
              href={buildPath(`${lang}/`)}
              class={`px-3 py-2 rounded-md text-sm transition ${portal === 'corporate' ? 'bg-akagi-red text-white' : 'text-akagi-teal hover:text-akagi-orange'}`}
            >
              {t('nav.corporate')}
            </a>
            <a 
              href={buildPath(`drift/${lang}/`)}
              class={`px-3 py-2 rounded-md text-sm transition ${portal === 'drift' ? 'bg-akagi-red text-white' : 'text-akagi-teal hover:text-akagi-orange'}`}
            >
              {t('nav.drift')}
            </a>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex md:items-center md:space-x-8">
            {portal === 'corporate' ? (
              <>
                <a 
                  href={buildPath(`${lang}/`)}
                  class={`hover:text-akagi-orange transition ${currentPath.endsWith(`/${lang}/`) || currentPath.endsWith(`/${lang}`) ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('nav.about')}
                </a>
                <a 
                  href={buildPath(`${lang}/services`)}
                  class={`hover:text-akagi-orange transition ${currentPath.includes('/services') ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('nav.services')}
                </a>
                <a 
                  href={buildPath(`${lang}/competitions`)}
                  class={`hover:text-akagi-orange transition ${currentPath.includes('/competitions') ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('nav.competitions')}
                </a>
                <a 
                  href={buildPath(`${lang}/contact`)}
                  class={`hover:text-akagi-orange transition ${currentPath.includes('/contact') ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('nav.contact')}
                </a>
              </>
            ) : (
              <>
                <a 
                  href={buildPath(`drift/${lang}/`)}
                  class={`hover:text-akagi-orange transition ${currentPath.endsWith(`/${lang}/`) || currentPath.endsWith(`/${lang}`) ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('drift.hero.title')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/fleet`)}
                  class={`hover:text-akagi-orange transition ${currentPath.includes('/fleet') ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('drift.nav.fleet')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/tracks`)}
                  class={`hover:text-akagi-orange transition ${currentPath.includes('/tracks') ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('drift.nav.tracks')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/pricing`)}
                  class={`hover:text-akagi-orange transition ${currentPath.includes('/pricing') ? 'text-akagi-light-blue' : 'text-akagi-teal'}`}
                >
                  {t('drift.nav.pricing')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/booking`)}
                  class={`bg-akagi-red hover:bg-akagi-orange px-4 py-2 rounded-md transition ${currentPath.includes('/booking') ? 'bg-akagi-orange' : ''}`}
                >
                  {t('drift.nav.booking')}
                </a>
              </>
            )}

            <!-- Language Switcher -->
            <div class="flex space-x-2 border-l border-akagi-teal pl-4">
              {Object.entries(languages).map(([code, name]) => (
                <a
                  href={buildPath(`${portalPrefix}${code}/`)}
                  class={`px-2 py-1 rounded text-sm transition ${lang === code ? 'bg-akagi-teal text-white' : 'text-akagi-light-blue hover:text-akagi-orange'}`}
                >
                  {code.toUpperCase()}
                </a>
              ))}
            </div>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button id="mobile-menu-button" class="text-akagi-teal hover:text-akagi-orange">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="space-y-1">
            <!-- Portal Switcher (Mobile) -->
            <div class="flex space-x-2 mb-4 px-3">
              <a 
                href={buildPath(`${lang}/`)}
                class={`flex-1 text-center px-3 py-2 rounded-md text-sm transition ${portal === 'corporate' ? 'bg-akagi-red text-white' : 'text-akagi-teal hover:text-akagi-orange'}`}
              >
                {t('nav.corporate')}
              </a>
              <a 
                href={buildPath(`drift/${lang}/`)}
                class={`flex-1 text-center px-3 py-2 rounded-md text-sm transition ${portal === 'drift' ? 'bg-akagi-red text-white' : 'text-akagi-teal hover:text-akagi-orange'}`}
              >
                {t('nav.drift')}
              </a>
            </div>

            {portal === 'corporate' ? (
              <>
                <a 
                  href={buildPath(`${lang}/`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.endsWith(`/${lang}/`) || currentPath.endsWith(`/${lang}`) ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('nav.about')}
                </a>
                <a 
                  href={buildPath(`${lang}/services`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.includes('/services') ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('nav.services')}
                </a>
                <a 
                  href={buildPath(`${lang}/competitions`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.includes('/competitions') ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('nav.competitions')}
                </a>
                <a 
                  href={buildPath(`${lang}/contact`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.includes('/contact') ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('nav.contact')}
                </a>
              </>
            ) : (
              <>
                <a 
                  href={buildPath(`drift/${lang}/`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.endsWith(`/${lang}/`) || currentPath.endsWith(`/${lang}`) ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('drift.hero.title')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/fleet`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.includes('/fleet') ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('drift.nav.fleet')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/tracks`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.includes('/tracks') ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('drift.nav.tracks')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/pricing`)}
                  class={`block px-3 py-2 rounded-md hover:bg-akagi-teal ${currentPath.includes('/pricing') ? 'bg-akagi-light-blue text-akagi-navy' : ''}`}
                >
                  {t('drift.nav.pricing')}
                </a>
                <a 
                  href={buildPath(`drift/${lang}/booking`)}
                  class={`block px-3 py-2 rounded-md bg-akagi-red hover:bg-akagi-orange ${currentPath.includes('/booking') ? 'bg-akagi-orange' : ''}`}
                >
                  {t('drift.nav.booking')}
                </a>
              </>
            )}

            <!-- Language Switcher (Mobile) -->
            <div class="flex space-x-2 border-t border-akagi-teal pt-4 px-3">
              {Object.entries(languages).map(([code, name]) => (
                <a
                  href={buildPath(`${portalPrefix}${code}/`)}
                  class={`flex-1 text-center px-2 py-1 rounded text-sm transition ${lang === code ? 'bg-akagi-teal text-white' : 'text-akagi-light-blue hover:text-akagi-orange'}`}
                >
                  {name}
                </a>
              ))}
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-akagi-charcoal text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold text-akagi-red mb-4">AKAGI ENGINEERING</h3>
            <p class="text-akagi-light-blue">
              JDM Motorsport Specialists<br />
              D1GP Racing Team
            </p>
          </div>
          
          <div>
            <h4 class="font-bold mb-4 text-akagi-orange">Quick Links</h4>
            <div class="space-y-2 text-akagi-light-blue">
              <a href={buildPath(`${lang}/`)} class="block hover:text-akagi-orange transition">
                {t('nav.corporate')}
              </a>
              <a href={buildPath(`drift/${lang}/`)} class="block hover:text-akagi-orange transition">
                {t('nav.drift')}
              </a>
            </div>
          </div>

          <div>
            <h4 class="font-bold mb-4 text-akagi-orange">Follow Us</h4>
            <div class="flex space-x-4">
              <a href="https://instagram.com/akagi_eng" target="_blank" rel="noopener" class="text-akagi-light-blue hover:text-akagi-orange transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                </svg>
              </a>
              <a href="https://youtube.com/@akagi_eng" target="_blank" rel="noopener" class="text-akagi-light-blue hover:text-akagi-orange transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
              <a href="https://www.tiktok.com/@akagi.drift.japan" target="_blank" rel="noopener" class="text-akagi-light-blue hover:text-akagi-orange transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-akagi-light-blue text-sm">
          <p>&copy; 2025 Akagi Eng. Co. Ltd. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
